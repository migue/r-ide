            point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="menu:org.eclipse.dltk.ui.source.menu?after=editGroup">     
			<command commandId="org.eclipse.dltk.ui.edit.text.script.format" />
			 <separator name="formatGroup" visible="true" />			
		</menuContribution>
      </extension> -->

   
</plugin>
